{
    "name": "SimonGonzalezCepeda/Scool-Social-Todos",
    "type": "library",
    "description": "Another Todo aplications that is compatible with Scool-Social package.",
    "keywords": [
        "SimonGonzalezCepeda",
        "Scool-Social-Todos"
    ],
    "homepage": "https://github.com/SimonGonzalezCepeda/Scool-Social-Todos",
    "license": "MIT",
    "authors": [
        {
            "name": "Simón González Cepeda",
            "email": "simongonzalez@iesebre.com",
            "homepage": "http://www.sylvershine.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "AcachaScool\\Social\\Todos\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcachaScool\\Social\\Todos\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
